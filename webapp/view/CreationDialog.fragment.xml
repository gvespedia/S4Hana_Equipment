<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:html="http://www.w3.org/1999/xhtml">
	<Dialog title="Create Notification" icon="sap-icon://activity-individual" contentWidth="40%">
		<content>
			<VBox width="90%" alignItems="Center">
				<html:div>
					<Text text="Description"></Text>
					<Input id="popupDescription" maxLength="40"></Input>
				</html:div>
				<html:div>
					<Text text="Equipment"></Text>
					<Input id="popupEqunr" maxLength="18"></Input>
				</html:div>
			</VBox>
		</content>
		<buttons>
			<Button text="Save" icon="sap-icon://accept" press="dialogSave"/>
			<Button text="Cancel" icon="sap-icon://sys-cancel" press="dialogClose"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>