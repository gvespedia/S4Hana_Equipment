<mvc:View controllerName="com.gv.s4equi.S4Equipment.controller.MainView" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<App id="idAppControl">
		<pages>
			<Page title="{i18n>title}">
				<content>
					<!--<List items="{/BapiNotifSet}">
						<items>

							<ObjectListItem title="{Notificat}" intro="{Descript}"></ObjectListItem>
						</items>
					</List>-->
					<Table id="equiTab" inset="false" items="{ path: '/BapiNotifSet', sorter: { path: 'Notificat' } }">
						<headerToolbar>
							<Toolbar>
								<content>
									<Title text="Notifications" level="H2" />
									<ToolbarSpacer/>
									<Button text="Debugger" press="onTest" />
								</content>
							</Toolbar>
						</headerToolbar>
						<columns>
							<Column width="12em">
								<Text text="Notification"/>
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="Functional Location"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
								<Text text="Equipment"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
								<Text text="Order"/>
							</Column>
							<Column hAlign="Center">
								<Text text="Date"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<ObjectIdentifier title="{Notificat}" text="{Descript}"/>
									<Text text="{Funcloc}"/>
									<Text text="{Equipment}"/>
									<Text text="{OrderNo}"/>
									<Text text="{ path: 'Notifdate' }"/>
								</cells>
								
							</ColumnListItem> 
						</items>
					</Table>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>